<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2b2b2b"
    tools:context=".ParkingActivity">

    <!-- Rue traversante au milieu -->
    <View
        android:id="@+id/middleRoad"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:background="#3e3e3e" />

    <!-- Slot 1 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/slot1"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@id/middleRoad"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E8F4C4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Slot 1"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_alignParentTop="true" />

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Réserver" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Slot 3 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/slot3"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:layout_toEndOf="@id/slot1"
        android:layout_alignParentTop="true"
        android:layout_above="@id/middleRoad"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#BDE2EF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Slot 3"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_alignParentTop="true" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Réserver"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Lignes de séparation entre Slot 1 et Slot 3 -->
    <View
        android:layout_width="2dp"
        android:layout_height="200dp"
        android:layout_toEndOf="@id/slot1"
        android:layout_alignParentTop="true"
        android:layout_above="@id/middleRoad"
        android:background="@android:color/white" />

    <!-- Slot 2 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/slot2"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/middleRoad"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ECD7AF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Slot 2"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_alignParentTop="true" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Réserver"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Slot 4 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/slot4"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:layout_toEndOf="@id/slot2"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/middleRoad"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B8E3DF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Slot 4"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_alignParentTop="true" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Réserver"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Lignes de séparation entre Slot 2 et Slot 4 -->
    <View
        android:layout_width="2dp"
        android:layout_height="200dp"
        android:layout_toEndOf="@id/slot2"
        android:layout_below="@id/middleRoad"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white" />

</RelativeLayout>
